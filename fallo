#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"

using namespace std;
void main ()
{
	int n,sig,i;
	float fact,s,x;
	
	s= 0;
	fact= 1;
	sig= 1;
	

	cout<< "Ingrese cuantas veces se elevara"<<endl;
	cin>> n;
	cout<< "Ingrese un valor para x"<<endl;
	cin>> x;

	for (i=1;1<=n;i++)
	{
		if (i%2!=0)
		{
			s=s+sig*(pow(x,i)/fact);
			sig=-sig;
		}
		fact= fact*(i+1);
	}

	cout<< "La suma es de: "<<s;
	getch();
