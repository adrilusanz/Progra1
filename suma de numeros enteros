#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;

void main ()
{
	int n, s, i;

	cout << "Ingrese la cantidad de numeros que quiere sumar" << endl;
	cout<< " " << endl;
	cin >> n;
	cout<< " " << endl;
	
	s=0;
	for ( i= 1 ; i<=n ; i++)
	{
		s = s + i;
	}
	cout << "La suma de todos los valores es: " << s;
	getch ();
}
