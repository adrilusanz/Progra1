#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;

void main ()
{
	int n, s, i;

	do {
	cout << "Ingrese la cantidad de numeros que quiere sumar" << endl;
	cout<< endl;
	cin >> n;
	cout<< endl;
	
	} while (n<0);
	s=0;
	for ( i= 1 ; i<=n ; i++)
	{
		s = s + i;
		cout << "Sumando: " << i << endl;
	}
	cout << "La suma de todos los valores es: " << s ;
	getch ();
}
